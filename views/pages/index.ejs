<!-- views/pages/index.ejs - Simple version without layout -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crypto Membership NFT</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            line-height: 1.6;
            color: #333;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .hero {
            text-align: center;
            color: white;
            padding: 60px 0;
        }
        
        .hero h1 {
            font-size: 3rem;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        
        .hero p {
            font-size: 1.2rem;
            margin-bottom: 40px;
            opacity: 0.9;
        }
        
        .stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 30px;
            margin: 40px 0;
        }
        
        .stat-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 30px;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .stat-number {
            font-size: 2.5rem;
            font-weight: bold;
            color: #fff;
            margin-bottom: 10px;
        }
        
        .stat-label {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1rem;
        }
        
        .cta-buttons {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }
        
        .btn {
            padding: 15px 30px;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }
        
        .btn-primary {
            background: #28a745;
            color: white;
        }
        
        .btn-secondary {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }
        
        .features {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 40px;
            margin: 40px 0;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .features h2 {
            text-align: center;
            color: white;
            margin-bottom: 30px;
            font-size: 2rem;
        }
        
        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
        }
        
        .feature-card {
            text-align: center;
            color: white;
        }
        
        .feature-icon {
            font-size: 3rem;
            margin-bottom: 20px;
        }
        
        .feature-card h3 {
            margin-bottom: 15px;
            font-size: 1.25rem;
        }
        
        .feature-card p {
            opacity: 0.9;
            line-height: 1.5;
        }
        
        .debug-info {
            background: rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 12px;
            padding: 20px;
            margin: 20px 0;
            color: white;
            font-family: monospace;
            font-size: 0.9rem;
        }
        
        @media (max-width: 768px) {
            .hero h1 {
                font-size: 2rem;
            }
            
            .stats {
                grid-template-columns: 1fr;
                gap: 20px;
            }
            
            .cta-buttons {
                flex-direction: column;
                align-items: center;
            }
            
            .features-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="hero">
            <h1>üöÄ Crypto Membership NFT</h1>
            <p>Join the exclusive decentralized membership ecosystem</p>
            
            <div class="stats">
                <div class="stat-card">
                    <div class="stat-number"><%= systemStats ? parseInt(systemStats.totalMembers) : 0 %></div>
                    <div class="stat-label">Members</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">16</div>
                    <div class="stat-label">Levels</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">BSC</div>
                    <div class="stat-label">Blockchain</div>
                </div>
            </div>
            
            <div class="cta-buttons">
                <% if (userMembership) { %>
                    <a href="/membership/dashboard" class="btn btn-primary">
                        üìä Dashboard
                    </a>
                    <a href="/membership/plans" class="btn btn-secondary">
                        ‚¨ÜÔ∏è Upgrade
                    </a>
                <% } else { %>
                    <a href="/membership/plans" class="btn btn-primary">
                        üéØ Get Started
                    </a>
                    <a href="/wallet/connect" class="btn btn-secondary">
                        üîó Connect Wallet
                    </a>
                <% } %>
            </div>
        </div>
        
        <div class="features">
            <h2>Why Choose Our Platform?</h2>
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">üé®</div>
                    <h3>Unique NFTs</h3>
                    <p>Receive exclusive non-transferable NFT membership cards</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon">üí∞</div>
                    <h3>Earn Commissions</h3>
                    <p>Generate passive income through our referral system</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon">üîí</div>
                    <h3>Secure & Transparent</h3>
                    <p>Built on Binance Smart Chain with full transparency</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon">üìà</div>
                    <h3>Growth Potential</h3>
                    <p>16 membership levels from $1 to $16</p>
                </div>
            </div>
        </div>
        
        <% if (process.env.NODE_ENV === 'development') { %>
            <div class="debug-info">
                <h3>üîß Debug Information (Development Mode)</h3>
                <p><strong>Telegram User:</strong> <%= telegramUser ? JSON.stringify(telegramUser, null, 2) : 'Not connected' %></p>
                <p><strong>User:</strong> <%= user ? JSON.stringify(user, null, 2) : 'No user data' %></p>
                <p><strong>Environment:</strong> <%= process.env.NODE_ENV %></p>
                <p><strong>Database:</strong> Connected ‚úÖ</p>
                <br>
                <p><strong>Test Links:</strong></p>
                <p>‚Ä¢ <a href="/health" style="color: #ffd700;">/health</a> - Health check</p>
                <p>‚Ä¢ <a href="/test-telegram" style="color: #ffd700;">/test-telegram</a> - Telegram test</p>
                <p>‚Ä¢ <a href="/test-database" style="color: #ffd700;">/test-database</a> - Database test</p>
                <p>‚Ä¢ <a href="/api/health" style="color: #ffd700;">/api/health</a> - API health</p>
            </div>
        <% } %>
    </div>

    <script>
        // Simple animations
        document.addEventListener('DOMContentLoaded', function() {
            // Animate stats
            const statNumbers = document.querySelectorAll('.stat-number');
            statNumbers.forEach((stat, index) => {
                stat.style.opacity = '0';
                stat.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    stat.style.transition = 'all 0.6s ease';
                    stat.style.opacity = '1';
                    stat.style.transform = 'translateY(0)';
                }, index * 200);
            });
            
            // Animate feature cards
            const featureCards = document.querySelectorAll('.feature-card');
            featureCards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                
                setTimeout(() => {
                    card.style.transition = 'all 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 1000 + (index * 200));
            });
        });
        
        // Telegram Web App integration
        if (window.Telegram && window.Telegram.WebApp) {
            window.Telegram.WebApp.ready();
            window.Telegram.WebApp.expand();
            console.log('Telegram Web App initialized');
        }
    </script>
</body>
</html>