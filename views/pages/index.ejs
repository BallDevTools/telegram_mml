                    <div class="stat-label">Levels</div>
                </div>
            </div>

            <div class="hero-actions">
                <% if (!userMembership) { %>
                    <a href="/membership/plans" class="cta-button primary">
                        <span class="btn-icon">üéØ</span>
                        <span>Get Started</span>
                    </a>
                    <a href="/how-it-works" class="cta-button secondary">
                        <span class="btn-icon">üìñ</span>
                        <span>Learn More</span>
                    </a>
                <% } else { %>
                    <a href="/membership/dashboard" class="cta-button primary">
                        <span class="btn-icon">üìä</span>
                        <span>Dashboard</span>
                    </a>
                    <a href="/membership/plans" class="cta-button secondary">
                        <span class="btn-icon">‚¨ÜÔ∏è</span>
                        <span>Upgrade</span>
                    </a>
                <% } %>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <h2>Why Choose Our Platform?</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">üé®</div>
                <h3>Unique NFTs</h3>
                <p>Receive exclusive non-transferable NFT membership cards that represent your level and achievements.</p>
            </div>
            
            <div class="feature-card">
                <div class="feature-icon">üí∞</div>
                <h3>Earn Commissions</h3>
                <p>Generate passive income through our referral system. Higher levels unlock better commission rates.</p>
            </div>
            
            <div class="feature-card">
                <div class="feature-icon">üîí</div>
                <h3>Secure & Transparent</h3>
                <p>Built on Binance Smart Chain with full transparency. All transactions are verifiable on-chain.</p>
            </div>
            
            <div class="feature-card">
                <div class="feature-icon">üìà</div>
                <h3>Growth Potential</h3>
                <p>16 membership levels from $1 to $16. Upgrade progressively and unlock new opportunities.</p>
            </div>
        </div>
    </section>

    <!-- Plans Preview -->
    <section class="plans-preview">
        <h2>Membership Plans</h2>
        <p>Choose from 16 different membership levels</p>
        
        <div class="plans-grid">
            <% featuredPlans.forEach(plan => { %>
                <div class="plan-preview-card">
                    <div class="plan-tier">
                        <% if (plan.id <= 4) { %>
                            <span class="tier-badge starter">Starter</span>
                        <% } else if (plan.id <= 8) { %>
                            <span class="tier-badge premium">Premium</span>
                        <% } else if (plan.id <= 12) { %>
                            <span class="tier-badge elite">Elite</span>
                        <% } else { %>
                            <span class="tier-badge infinity">Infinity</span>
                        <% } %>
                    </div>
                    
                    <div class="plan-name"><%= plan.name %></div>
                    <div class="plan-level">Level <%= plan.id %></div>
                    <div class="plan-price">$<%= plan.priceUSDT %></div>
                    
                    <div class="plan-stats">
                        <div class="plan-stat">
                            <span class="label">Members per Cycle</span>
                            <span class="value"><%= plan.membersPerCycle %></span>
                        </div>
                        <div class="plan-stat">
                            <span class="label">Current Cycle</span>
                            <span class="value">#<%= plan.currentCycle %></span>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <div class="plans-action">
            <a href="/membership/plans" class="view-all-plans">
                View All 16 Plans ‚Üí
            </a>
        </div>
    </section>

    <!-- How It Works -->
    <section class="how-it-works">
        <h2>How It Works</h2>
        <div class="steps-container">
            <div class="step">
                <div class="step-number">1</div>
                <div class="step-content">
                    <h3>Connect Wallet</h3>
                    <p>Connect your BSC-compatible wallet like MetaMask or Trust Wallet</p>
                </div>
            </div>
            
            <div class="step">
                <div class="step-number">2</div>
                <div class="step-content">
                    <h3>Choose Plan</h3>
                    <p>Select from 16 membership levels starting from just $1 USDT</p>
                </div>
            </div>
            
            <div class="step">
                <div class="step-number">3</div>
                <div class="step-content">
                    <h3>Get NFT</h3>
                    <p>Receive your unique membership NFT and start earning</p>
                </div>
            </div>
            
            <div class="step">
                <div class="step-number">4</div>
                <div class="step-content">
                    <h3>Refer & Earn</h3>
                    <p>Share your referral link and earn commissions from new members</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Recent Activity -->
    <% if (recentMembers && recentMembers.length > 0) { %>
        <section class="recent-activity">
            <h2>Recent Members</h2>
            <div class="members-list">
                <% recentMembers.slice(0, 6).forEach(member => { %>
                    <div class="member-item">
                        <div class="member-avatar">
                            <%= member.firstName.charAt(0).toUpperCase() %>
                        </div>
                        <div class="member-info">
                            <div class="member-name">
                                <%= member.firstName %> <%= member.lastName || '' %>
                            </div>
                            <div class="member-date">
                                <%= new Date(member.createdAt).toLocaleDateString() %>
                            </div>
                        </div>
                        <div class="member-status">üéâ</div>
                    </div>
                <% }); %>
            </div>
        </section>
    <% } %>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="cta-content">
            <h2>Ready to Start Your Journey?</h2>
            <p>Join thousands of members who are already earning and growing their network</p>
            
            <% if (!userMembership) { %>
                <div class="cta-buttons">
                    <a href="/membership/plans" class="cta-button primary large">
                        Start Now - From $1
                    </a>
                </div>
            <% } else { %>
                <div class="member-cta">
                    <div class="current-level">
                        <span>Your Current Level: <strong><%= userMembership.planName %></strong></span>
                    </div>
                    <a href="/membership/dashboard" class="cta-button primary large">
                        View Dashboard
