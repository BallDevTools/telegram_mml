<% layout('layouts/main') -%>

<div class="homepage">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <div class="hero-icon">üöÄ</div>
            <h1 class="hero-title">Crypto Membership NFT</h1>
            <p class="hero-subtitle">
                Join the exclusive decentralized membership ecosystem. 
                Earn commissions, collect unique NFTs, and build your network.
            </p>
            
            <div class="hero-stats">
                <div class="stat">
