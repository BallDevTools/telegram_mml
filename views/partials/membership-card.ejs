<script>
// View NFT Details
function viewNFTDetails(planId) {
    if (window.Telegram?.WebApp?.HapticFeedback) {
        window.Telegram.WebApp.HapticFeedback.impactOccurred('medium');
    }
    
    // Create detailed view modal or navigate to details page
    const membershipDetails = {
        planId: planId,
        features: [
            'Unique NFT Membership Card',
            'Referral Commission System',
            'Exclusive Member Benefits',
            'Upgrade Path Available',
            'Non-Transferable Token'
        ],
        blockchain: 'Binance Smart Chain',
        standard: 'ERC-721 Compatible'
    };
    
    const detailsHtml = `
        <div class="nft-details-modal">
            <h3>🎨 NFT Membership Details</h3>
            <div class="details-content">
                <div class="detail-section">
                    <h4>Plan Features:</h4>
                    <ul>
                        ${membershipDetails.features.map(feature => `<li>• ${feature}</li>`).join('')}
                    </ul>
                </div>
                <div class="detail-section">
                    <h4>Technical Details:</h4>
                    <p><strong>Blockchain:</strong> ${membershipDetails.blockchain}</p>
                    <p><strong>Standard:</strong> ${membershipDetails.standard}</p>
                    <p><strong>Level:</strong> ${planId}</p>
                </div>
            </div>
        </div>
    `;
    
    if (window.Telegram?.WebApp) {
        window.Telegram.WebApp.showAlert('NFT Details: Level ' + planId + ' membership with exclusive benefits and commission earning potential.');
    } else {
        // Show in modal or alert
        alert('NFT Details: Level ' + planId + ' membership with exclusive benefits.');
    }
}

// Share NFT
function shareNFT() {
    if (window.Telegram?.WebApp?.HapticFeedback) {
        window.Telegram.WebApp.HapticFeedback.impactOccurred('light');
    }
    
    const shareData = {
        title: 'My Crypto Membership NFT',
        text: `🎨 Check out my exclusive Level ${window.APP_DATA?.membership?.planId || 'X'} NFT Membership Card! Join the community and start earning.`,
        url: window.location.origin
    };
    
    if (window.Telegram?.WebApp) {
        const message = `${shareData.text}\n\n${shareData.url}`;
        window.Telegram.WebApp.switchInlineQuery(message, ['users']);
    } else if (navigator.share) {
        navigator.share(shareData).catch(err => {
            console.log('Error sharing:', err);
            fallbackShare(shareData);
        });
    } else {
        fallbackShare(shareData);
    }
}

// Fallback share function
function fallbackShare(shareData) {
    const shareText = `${shareData.text}\n${shareData.url}`;
    
    if (navigator.clipboard) {
        navigator.clipboard.writeText(shareText).then(() => {
            if (window.Telegram?.WebApp) {
                window.Telegram.WebApp.showAlert('Share text copied to clipboard!');
            } else {
                alert('Share text copied to clipboard!');
            }
        });
    } else {
        // Create temporary textarea for copying
        const textArea = document.createElement('textarea');
        textArea.value = shareText;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
        
        if (window.Telegram?.WebApp) {
            window.Telegram.WebApp.showAlert('Share text copied to clipboard!');
        } else {
            alert('Share text copied to clipboard!');
        }
    }
}

// Add intersection observer for card animations
document.addEventListener('DOMContentLoaded', function() {
    const membershipCard = document.querySelector('.membership-nft-card');
    
    if (membershipCard && 'IntersectionObserver' in window) {
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        });
        
        membershipCard.style.opacity = '0';
        membershipCard.style.transform = 'translateY(20px)';
        membershipCard.style.transition = 'all 0.6s ease';
        
        observer.observe(membershipCard);
    }
    
    // Add haptic feedback to interactive elements
    const interactiveElements = document.querySelectorAll('.card-action-btn, .get-membership-btn, .membership-nft-card');
    
    interactiveElements.forEach(element => {
        element.addEventListener('click', function() {
            if (window.Telegram?.WebApp?.HapticFeedback) {
                window.Telegram.WebApp.HapticFeedback.impactOccurred('light');
            }
        });
    });
    
    // Add hover effects for non-touch devices
    if (window.matchMedia('(hover: hover)').matches) {
        const nftCard = document.querySelector('.membership-nft-card');
        if (nftCard) {
            nftCard.addEventListener('mousemove', function(e) {
                const rect = this.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                const centerX = rect.width / 2;
                const centerY = rect.height / 2;
                const rotateX = (y - centerY) / 10;
                const rotateY = (centerX - x) / 10;
                
                this.style.transform = `translateY(-8px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
            });
            
            nftCard.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) rotateX(0deg) rotateY(0deg)';
            });
        }
    }
});

// Export functions for external use
window.membershipCardActions = {
    viewDetails: viewNFTDetails,
    share: shareNFT
};
