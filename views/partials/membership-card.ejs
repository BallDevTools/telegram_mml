<!-- views/partials/membership-card.ejs -->
<div class="membership-card-partial">
    <% if (typeof membership !== 'undefined' && membership) { %>
        <div class="membership-nft-card" data-plan-id="<%= membership.planId %>">
            <!-- Card Background Gradient -->
            <div class="card-background">
                <div class="gradient-overlay tier-<%= Math.ceil(membership.planId / 4) %>"></div>
                <div class="pattern-overlay"></div>
            </div>
            
            <!-- Card Header -->
            <div class="nft-card-header">
                <div class="card-logo">
                    <span class="logo-icon">🚀</span>
                    <span class="logo-text">CryptoMML</span>
                </div>
                <div class="card-status">
                    <span class="status-indicator active"></span>
                    <span class="status-text">Active</span>
                </div>
            </div>
            
            <!-- Card Main Content -->
            <div class="nft-card-main">
                <div class="plan-tier-info">
                    <div class="tier-badge tier-<%= Math.ceil(membership.planId / 4) %>">
                        <% if (membership.planId <= 4) { %>
                            <span class="tier-icon">🌟</span>
                            <span class="tier-name">Starter</span>
                        <% } else if (membership.planId <= 8) { %>
                            <span class="tier-icon">💎</span>
                            <span class="tier-name">Premium</span>
                        <% } else if (membership.planId <= 12) { %>
                            <span class="tier-icon">👑</span>
                            <span class="tier-name">Elite</span>
                        <% } else { %>
                            <span class="tier-icon">🔥</span>
                            <span class="tier-name">Infinity</span>
                        <% } %>
                    </div>
                </div>
                
                <div class="plan-details">
                    <div class="plan-name"><%= membership.planName %></div>
                    <div class="plan-level">Level <%= membership.planId %></div>
                </div>
                
                <!-- NFT Visual -->
                <div class="nft-visual-container">
                    <div class="nft-visual">
                        <div class="visual-inner">
                            <% if (membership.planId <= 4) { %>
                                <div class="tier-visual starter">
                                    <div class="visual-icon">🌟</div>
                                    <div class="visual-particles">
                                        <span class="particle">✨</span>
                                        <span class="particle">⭐</span>
                                        <span class="particle">🌟</span>
                                    </div>
                                </div>
                            <% } else if (membership.planId <= 8) { %>
                                <div class="tier-visual premium">
                                    <div class="visual-icon">💎</div>
                                    <div class="visual-particles">
                                        <span class="particle">💠</span>
                                        <span class="particle">🔷</span>
                                        <span class="particle">💎</span>
                                    </div>
                                </div>
                            <% } else if (membership.planId <= 12) { %>
                                <div class="tier-visual elite">
                                    <div class="visual-icon">👑</div>
                                    <div class="visual-particles">
                                        <span class="particle">👑</span>
                                        <span class="particle">💠</span>
                                        <span class="particle">🏆</span>
                                    </div>
                                </div>
                            <% } else { %>
                                <div class="tier-visual infinity">
                                    <div class="visual-icon">🔥</div>
                                    <div class="visual-particles">
                                        <span class="particle">🔥</span>
                                        <span class="particle">⚡</span>
                                        <span class="particle">💥</span>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Card Details Grid -->
            <div class="nft-card-details">
                <div class="detail-row">
                    <div class="detail-item">
                        <span class="detail-label">Token ID</span>
                        <span class="detail-value">
                            <% if (membership.tokenId) { %>
                                #<%= membership.tokenId %>
                            <% } else { %>
                                <span class="pending">Minting...</span>
                            <% } %>
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Cycle</span>
                        <span class="detail-value">#<%= membership.cycleNumber || 1 %></span>
                    </div>
                </div>
                
                <div class="detail-row">
                    <div class="detail-item">
                        <span class="detail-label">Joined</span>
                        <span class="detail-value">
                            <%= new Date(membership.registeredAt).toLocaleDateString('en-US', { 
                                month: 'short', 
                                day: 'numeric', 
                                year: 'numeric' 
                            }) %>
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Earnings</span>
                        <span class="detail-value earnings">
                            <%= (parseInt(membership.totalEarnings || 0) / 1000000).toFixed(2) %> USDT
                        </span>
                    </div>
                </div>
            </div>
            
            <!-- Card Footer -->
            <div class="nft-card-footer">
                <div class="chain-info">
                    <span class="chain-icon">🔗</span>
                    <span class="chain-text">Binance Smart Chain</span>
                </div>
                <div class="non-transferable">
                    <span class="lock-icon">🔒</span>
                    <span class="lock-text">Non-Transferable</span>
                </div>
            </div>
            
            <!-- Interactive Elements -->
            <div class="card-actions">
                <button class="card-action-btn view-details" onclick="viewNFTDetails(<%= membership.planId %>)">
                    <span class="action-icon">👁️</span>
                    <span class="action-text">View Details</span>
                </button>
                <button class="card-action-btn share-nft" onclick="shareNFT()">
                    <span class="action-icon">📤</span>
                    <span class="action-text">Share</span>
                </button>
            </div>
            
            <!-- Holographic Effect Overlay -->
            <div class="holographic-overlay"></div>
        </div>
    <% } else { %>
        <!-- No Membership Card -->
        <div class="no-membership-card">
            <div class="placeholder-background">
                <div class="placeholder-pattern"></div>
            </div>
            
            <div class="placeholder-content">
                <div class="placeholder-icon">🎨</div>
                <h3 class="placeholder-title">Your NFT Membership Card</h3>
                <p class="placeholder-description">
                    Get your unique NFT membership card by joining any plan
                </p>
                <a href="/membership/plans" class="get-membership-btn">
                    <span class="btn-icon">🎯</span>
                    <span class="btn-text">Get Membership</span>
                </a>
            </div>
        </div>
    <% } %>
</div>

