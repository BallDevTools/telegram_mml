{
  "name": "telegram-crypto-membership",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "setup-bot": "node scripts/setupBot.js",
    "test-bot": "node scripts/testBot.js",
    "webhook-test": "node scripts/testWebhook.js",
    "check-events": "node scripts/checkContractEvents.js",
    "pm2:setup": "chmod +x scripts/pm2-commands.sh && ./scripts/pm2-commands.sh setup",
    "pm2:start": "./scripts/pm2-commands.sh start",
    "pm2:stop": "./scripts/pm2-commands.sh stop",
    "pm2:restart": "./scripts/pm2-commands.sh restart",
    "pm2:reload": "./scripts/pm2-commands.sh reload",
    "pm2:status": "./scripts/pm2-commands.sh status",
    "pm2:logs": "./scripts/pm2-commands.sh logs",
    "pm2:monitor": "./scripts/pm2-commands.sh monitor",
    "pm2:delete": "./scripts/pm2-commands.sh delete",
    "pm2:health": "./scripts/pm2-commands.sh health",
    "deploy:production": "npm run pm2:setup && npm run pm2:start",
    "deploy:staging": "NODE_ENV=staging npm run pm2:start",
    "logs:app": "pm2 logs crypto-membership-nft",
    "logs:events": "pm2 logs event-listener",
    "logs:all": "pm2 logs",
    "backup:logs": "tar -czf logs-backup-$(date +%Y%m%d).tar.gz logs/",
    "clean:logs": "pm2 flush && > logs/app.log && > logs/error.log"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "ethers": "^6.8.0",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "node-telegram-bot-api": "^0.63.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  }
}
